<!DOCTYPE html>
<html>
  <head>
    <title>Foodie | Meat your Match</title>
    <meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/main.css" rel="stylesheet">
  	<link href="/css/bootstrap.css" rel="stylesheet">
  	<link href="/css/bootstrap-theme.css" rel="stylesheet">
    <link rel="shortcut icon" href="./images/icons/chef.png">
  </head>
  <body>
    <!-- jumbrotron -->
	  <header>
			<div class="container">
				<ul class="nav">
          <li><a class="profile" href="/profile"><img src="/images/icons/avatar.png" width="40"></a></li>
          <li><h1>Foodie</h1></li>
					<li><a class="chat" href="/chat"><img src="/images/icons/chat.png" width="40"></a></li>
			  </ul>
			</div>
	  </header>

    <!-- Mode Selector -->
	  <section class="mode-selector">
			<div class="container">
		    <ul class="nav">
			    <li class="swipe"><a href="/">Swipe</a></li>
			    <li class="list"><a class="selected" href="/list">List</a></li>
		    </ul>
		  </div>
	  </section>

    <div class="container" id="list-view">
    {{#each foods}}
      <section class="food" id="{{name}}">
        <div class="container" id="list-item">
          <ul class="nav" id="list-info">
            <li class="list-info">
              <h3>{{cuisine-type}}</h3>
  			      <h2>{{name}}</h2>
            </li>
            <li class="dislike"><a><img src="/images/icons/dislike.png" width="50"></a></li>
            <li class="like"><a><img src="/images/icons/like.png" width="50"></a></li>
          </div>
      </section>
    {{/each}}
    </div>

    <!-- See Matches -->
		<section class="see-matches">
			<div class="container">
			  <p><span>0 Foods Liked</span><br />Like for better accuracy</p>
			  <a href="/match"><button class="button1">See Matches</button></a>
		  </div>
		</section>


  </body>
  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <!-- Include all compiled plugins (blelow), or include individual files as needed -->
  <script src="/js/bootstrap.js"></script>
  <script src="/js/main.js"></script>
</html>
