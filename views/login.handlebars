<html>
<head>
	<title>Foodie</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">


	<!-- CSS -->
	<link rel="stylesheet" type="text/css" href="css/login.css">

	<!-- JS -->

</head>
<body>
	<div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = 'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12&appId=390189708109431&autoLogAppEvents=1';
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
	</script>

	<div class="container">
		<div class="img1">
			<img src="images/food/loginFood1.png">
		</div>
		<div class="login-container">
			<div class="img3">
				<img src="images/food/loginFood3.png">
			</div>
			<!-- LOGO -->
			<div class="logo">
				<img src="images/logo/FOODIE_TITLE.png">
			</div>

      <!-- Log in/Sign up Options  -->
			<div class="login-area">
			  <!-- Next Button -->
			  <a href="/login1">
				  <div class="next">
					  <p>Login with email</p>
				  </div>
			  </a>
			  <a href="/">
					<div class="fb-login">
				    <div class="fb-login-button" data-width="300" data-max-rows="1" data-size="large" data-button-type="continue_with" data-show-faces="false" data-auto-logout-link="false" data-use-continue-as="false" scope="public_profile,email" onlogin="checkLoginState();"></div>
          </div>
				</a>

			  <p class="register"><i>Don't have an account? <a href="/register1">Register</a></i></p>

      </div>

      <div class="welcome">
				<img id="image">
				<div id="name"></div>
				<div id="continue"><div>
			</div>

		</div>

	</div>

  <script src="https://code.jquery.com/jquery.js"></script>
	{{> facebook}}
	<script src="/js/facebook.js"></script>
