<html>
<head>
	<title>Foodie | Meat your Match</title>
  <meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/index.css" rel="stylesheet">
	<link href="/css/food.css" rel="stylesheet">
  <link rel="shortcut icon" href="./images/icons/chef.png">
</head>
<body>
	<div class="container">
	  <!-- jumbrotron -->
	  <header class="top">
			<a href="/profile"> <img src="images/icons/avatar.png" id="avatar"> </a>
			<div class="logo-container">
				<a href="/login1"><img src="images/logo/FOODIE_TITLE.png"></a>
			</div>
			<a href="/chat"><img src="images/icons/chat.png" id="chat"></a>
	  </header>

	  <!-- Mode Selector -->
	  <section class="mode-selector">
		  <ul class="nav">
			  <li class="swipe"><a class="selected" href="/">Swipe</a></li>
			  <li class="list"><a href="/list">List</a></li>
		  </ul>
	  </section>

		<!-- Food Preview -->
		<div class="swipe-area">
	  <section class="food-image">
			  <ul class="nav" id="swipe">
			    <li class="left"><a href="#"><img src="/images/icons/left.png" width="50"></a></li>
			    <li class="right"><a href="#"><img src="/images/icons/right.png" width="50"></a></li>
		    </ul>
		  	<ul class="nav" id="rate">
		  	  <li class="dislike"><a href="#"><img src="/images/icons/dislike.png" width="100"></a></li>
		  	  <li class="like"><a href="#"><img src="/images/icons/like.png" width="100"></a></li>
		    </ul>
	  </section>
	  </div>

    <!-- Food Description -->
	  <section class="food-description">
				<h3>Type of Cuisine</h3>
			  <h2>Name of Food</h2>
	      <p>Description of Food</p>
			  <ul class="nav">
			    <li><img src="/images/icons/timer.svg" width="40"><h6>20 Minutes</h6></li>
			    <li><img src="/images/icons/chef.png" width="40"><h6>Beginner</h6></li>
				  <li><img src="/images/icons/cart.svg" width="40"><h6>$8-$10</h6></li>
		    </ul>
	  </section>

		<!-- See Matches -->
		<section class="see-matches">
			  <p><span class="like-counter">0</span> Foods Liked<br />Like for better accuracy</p>
			  <a href="/match"><button class="button1">See Matches</button></a>
		</section>
  </div>
</body>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery.js"></script>
<!-- Include all compiled plugins (blelow), or include individual files as needed -->
<script src="/js/bootstrap.js"></script>
<script src="/js/index.js"></script>
</html>
