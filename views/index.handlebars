<html>
<head>
	<title>Foodie | Meat your Match</title>
  <meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/main.css" rel="stylesheet">
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
  <link rel="shortcut icon" href="./images/logo.ico">
</head>
<body>
	  <!-- jumbrotron -->
	  <header>
			<div class="container">
				<ul class="nav">
				  <li><a class="profile" href="/profile"><img src="/images/icons/avatar.png" width="40"></a></li>
          <li><h1>Foodie</h1></li>
					<li><a class="chat" href="/chat"><img src="/images/icons/chat.png" width="40"></a></li>
			  </ul>
			</div>
	  </header>

	  <!-- Mode Selector -->
	  <section class="mode-selector">
			<div class="container">
		    <ul class="nav">
			    <li class="swipe"><a class="selected" href="/">Swipe</a></li>
			    <li class="list"><a href="/list">List</a></li>
		    </ul>
		  </div>
	  </section>

		<!-- Food Preview -->
	  <section class="food" id="preview">
			<div class="container">
			  <ul class="nav" id="swipe">
			    <li class="left"><a><img src="/images/icons/left.png" width="50"></a></li>
			    <li class="right"><a><img src="/images/icons/right.png" width="50"></a></li>
		    </ul>
		  	<ul class="nav" id="rate">
		  	  <li class="dislike"><a><img src="/images/icons/dislike.png" width="100"></a></li>
		  	  <li class="like"><a><img src="/images/icons/like.png" width="100"></a></li>
		    </ul>
		  </div>
	  </section>

    <!-- Food Description -->
	  <section class="food" id="description">
			<div class="container">
				<h3>Type of Cuisine</h3>
			  <h2>Name of Food</h2>
	      <p>Description of Food</p>
			  <ul class="nav">
			    <li><img src="/images/icons/timer.svg" width="40"><h6>20 Minutes</h6></li>
			    <li><img src="/images/icons/chef.png" width="40"><h6>Beginner</h6></li>
				  <li><img src="/images/icons/cart.svg" width="40"><h6>$8-$10</h6></li>
		    </ul>
		  </div>
	  </section>

		<!-- See Matches -->
		<section class="see-matches">
			<div class="container">
			  <p><span>0 Foods Liked</span><br />Like for better accuracy</p>
			  <a href="/match"><button class="button1">See Matches</button></a>
		  </div>
		</section>

</body>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery.js"></script>
<!-- Include all compiled plugins (blelow), or include individual files as needed -->
<script src="/js/bootstrap.js"></script>
</html>
