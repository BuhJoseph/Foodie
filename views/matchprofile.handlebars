<!DOCTYPE html>
<html>
  <head>
    <title>Foodie | Meat your Match</title>
    <meta charset="utf-8">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="../css/matchprofile.css">
    <link rel="shortcut icon" href="./images/icons/chef.png">

    <script type="text/javascript" src="C:\Users\josep_000\Desktop\CSE170\Foodie\match2.json"></script>
  </head>
  <body>

    <div class="container">

      <!-- Header Banner and Profile Pic -->
      <div class="cover-photo" style="background-image:url({{backgroundURL}});">
        <div class="gradient">
          <a href="/match">
            <div class="back">
              <img src="../images/icons/left.svg">
            </div>
          </a>
        </div>
      </div>
      <div class="profile-img" id="profile" style="background-image:url({{imageURL}});"></div>
      <h2 class="name" id="name">{{name}}</h2>
      <p class="description" id="description">{{description}}</p>

      <!-- Matched Food Section -->
      <div class="food">
        <h2 class="matched-food">Your Matched Foods</h2>
        <a href="/matchedFood"><p class="seeall">See all >></p></a>
        <p class="match-rating">{{percent}}% | 8 Foods Matched</p>

        <section class="section-meals">

            <div class="meal-photo" style="background-image:url(../images/food/sushi.jpg);"></div>
            <div class="meal-photo" style="background-image:url(../images/food/udon.jpg);"></div>
            <div class="meal-photo" style="background-image:url(../images/food/donburi.jpeg);" id="last"></div>

        </section>
      </div>

      <div class="provide">
        <h2 class>What I can Provide</h2>
        <p>2 Ramen Bowls</p>
        <p>Stove</p>
        <p>Chicken</p>
        <p>A few billion dollars</p>
      </div>

      <a href="/match2/{{name}}" class="sticky">
        <div class="cook">
          <h2>I want to cook with this person!</h2>
        </div>
      </a>

  </div>

  </body>
  <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
  <script src="https://code.jquery.com/jquery.js"></script>
  <!-- Include all compiled plugins (blelow), or include individual files as needed -->
  <script src="/js/bootstrap.js"></script>
  <script src="/js/matchprofile.js"></script>
  <script type="text/javascript">
    window.onload = function () {
    var url = document.location.href,
        params = url.split('?')[1].split('&'),
        data = {}, tmp;
    for (var i = 0, l = params.length; i < l; i++) {
         tmp = params[i].split('=');
         data[tmp[0]] = tmp[1];
    }
    document.getElementById('here').innerHTML = data.test;
  }
  </script>
</html>
